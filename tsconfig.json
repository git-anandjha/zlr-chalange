{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@src/*": ["./src/*"]
    }
  },
  "include": ["src/**/*","/index.ts", "tests/checkout.test.ts"],
  "exclude": ["node_modules", "**/*.test.ts"],
}